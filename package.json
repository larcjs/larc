{
  "name": "larc",
  "version": "2.0.0",
  "private": true,
  "description": "LARC Development Monorepo - Documentation, examples, and developer tools",
  "type": "module",
  "workspaces": [
    "packages/*",
    "core",
    "ui",
    "cli",
    "registry",
    "react-adapter",
    "site",
    "devtools",
    "vscode-extension"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:core": "npm run build --workspace @larcjs/core",
    "build:components": "npm run build --workspace @larcjs/components",
    "build:minify": "node scripts/build-minified.js",
    "build:all": "npm run build && npm run build:minify",
    "test": "npm run test --workspaces --if-present",
    "test:core": "npm run test --workspace @larcjs/core",
    "test:components": "npm run test --workspace @larcjs/components",
    "dev": "npm run dev --workspaces --if-present",
    "dev:site": "npm run dev --workspace @larcjs/site",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "serve": "python3 -m http.server 8000",
    "pnpm:build": "pnpm -r build",
    "pnpm:test": "pnpm -r test",
    "pnpm:dev": "pnpm -r --parallel dev",
    "pnpm:clean": "pnpm -r clean",
    "pnpm:lint": "pnpm -r lint"
  },
  "keywords": [
    "larc",
    "pan",
    "message-bus",
    "web-components",
    "monorepo"
  ],
  "author": "Chris Robison",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/larcjs/larc.git"
  },
  "devDependencies": {}
}
