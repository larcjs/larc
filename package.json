{
  "name": "larc",
  "version": "2.0.0",
  "private": true,
  "description": "LARC (Lightweight Asynchronous Relay Core) - Zero-dependency web component framework with message-based architecture",
  "type": "module",
  "workspaces": [
    "packages/*",
    "cli",
    "registry",
    "react-adapter",
    "docs/site",
    "vscode-extension"
  ],
  "scripts": {
    "sync:components": "node scripts/sync-components.js",
    "build": "npm run sync:components && npm run build --workspaces --if-present",
    "build:core": "npm run build --workspace @larcjs/core",
    "build:ui": "npm run build --workspace @larcjs/ui",
    "build:cli": "npm run build --workspace create-larc-app",
    "build:minify": "node scripts/build-minified.js",
    "build:all": "npm run sync:components && npm run build && npm run build:minify",
    "test": "npm run test --workspaces --if-present",
    "test:core": "npm run test --workspace @larcjs/core",
    "test:ui": "npm run test --workspace @larcjs/ui",
    "test:all": "npm run test && npm run test:integration",
    "test:integration": "npm run test --workspace @larcjs/examples",
    "dev": "npm run dev --workspaces --if-present",
    "dev:site": "npm run dev --workspace @larcjs/site",
    "dev:playground": "npm run serve -- playground",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "serve": "python3 -m http.server 8000",
    "serve:examples": "cd packages/examples && python3 -m http.server 8888",
    "version:check": "npm run version --workspaces",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "npm run sync:components && changeset publish",
    "changeset:status": "changeset status",
    "prepublishOnly": "npm run sync:components",
    "docs:api": "npm run build:api --workspace @larcjs/site",
    "docs:markdown": "npm run build:docs --workspace @larcjs/site",
    "docs:generate": "npm run build --workspace @larcjs/site",
    "pnpm:build": "pnpm -r build",
    "pnpm:test": "pnpm -r test",
    "pnpm:dev": "pnpm -r --parallel dev",
    "pnpm:clean": "pnpm -r clean",
    "pnpm:lint": "pnpm -r lint"
  },
  "keywords": [
    "larc",
    "pan",
    "page-area-network",
    "message-bus",
    "web-components",
    "custom-elements",
    "event-bus",
    "pubsub",
    "reactive",
    "zero-dependencies",
    "zero-build",
    "microfrontends",
    "microservices",
    "component-framework",
    "monorepo"
  ],
  "author": "Chris Robison",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/larcjs/larc.git"
  },
  "homepage": "https://larcjs.com",
  "bugs": {
    "url": "https://github.com/larcjs/larc/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8"
  },
  "dependencies": {
    "dompurify": "^3.3.1"
}
}
