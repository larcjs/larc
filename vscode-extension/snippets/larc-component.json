{
  "LARC Component": {
    "prefix": "larc-component",
    "body": [
      "/**",
      " * ${1:ComponentName} Component",
      " */",
      "",
      "export class ${1:ComponentName} extends HTMLElement {",
      "  constructor() {",
      "    super();",
      "    this.attachShadow({ mode: 'open' });",
      "  }",
      "",
      "  static get observedAttributes() {",
      "    return ['${2:attribute}'];",
      "  }",
      "",
      "  connectedCallback() {",
      "    this.render();",
      "  }",
      "",
      "  disconnectedCallback() {",
      "    // Cleanup",
      "  }",
      "",
      "  attributeChangedCallback(name, oldValue, newValue) {",
      "    if (oldValue !== newValue) {",
      "      this.render();",
      "    }",
      "  }",
      "",
      "  get ${2:attribute}() {",
      "    return this.getAttribute('${2:attribute}') || '';",
      "  }",
      "",
      "  set ${2:attribute}(val) {",
      "    this.setAttribute('${2:attribute}', val);",
      "  }",
      "",
      "  render() {",
      "    this.shadowRoot.innerHTML = \\`",
      "      <style>",
      "        :host {",
      "          display: block;",
      "        }",
      "      </style>",
      "",
      "      <div class=\"container\">",
      "        ${3:<!-- Content -->}",
      "      </div>",
      "    \\`;",
      "  }",
      "}",
      "",
      "customElements.define('${4:component-name}', ${1:ComponentName});",
      "$0"
    ],
    "description": "Create a LARC web component"
  },
  "LARC PAN Component": {
    "prefix": "larc-pan-component",
    "body": [
      "/**",
      " * ${1:ComponentName} Component with PAN Bus",
      " */",
      "",
      "import { usePAN } from '@larcjs/core';",
      "",
      "export class ${1:ComponentName} extends HTMLElement {",
      "  constructor() {",
      "    super();",
      "    this.attachShadow({ mode: 'open' });",
      "    this.pan = usePAN();",
      "  }",
      "",
      "  static get observedAttributes() {",
      "    return ['topic'];",
      "  }",
      "",
      "  connectedCallback() {",
      "    const topic = this.getAttribute('topic');",
      "    if (topic) {",
      "      this.pan.subscribe(topic, this.handleMessage.bind(this));",
      "    }",
      "    this.render();",
      "  }",
      "",
      "  disconnectedCallback() {",
      "    this.pan.unsubscribeAll();",
      "  }",
      "",
      "  handleMessage(data) {",
      "    console.log('Received:', data);",
      "    ${2:// Handle message}",
      "    this.render();",
      "  }",
      "",
      "  publish(data) {",
      "    const topic = this.getAttribute('topic');",
      "    if (topic) {",
      "      this.pan.publish(topic, data);",
      "    }",
      "  }",
      "",
      "  render() {",
      "    this.shadowRoot.innerHTML = \\`",
      "      <style>",
      "        :host {",
      "          display: block;",
      "        }",
      "      </style>",
      "",
      "      <div class=\"container\">",
      "        ${3:<!-- Content -->}",
      "      </div>",
      "    \\`;",
      "  }",
      "}",
      "",
      "customElements.define('${4:component-name}', ${1:ComponentName});",
      "$0"
    ],
    "description": "Create a LARC component with PAN bus integration"
  },
  "PAN Subscribe": {
    "prefix": "pan-subscribe",
    "body": [
      "this.pan.subscribe('${1:topic}', (data) => {",
      "  ${2:// Handle message}",
      "});"
    ],
    "description": "Subscribe to PAN bus topic"
  },
  "PAN Publish": {
    "prefix": "pan-publish",
    "body": [
      "this.pan.publish('${1:topic}', ${2:data});"
    ],
    "description": "Publish to PAN bus topic"
  },
  "Import LARC Core": {
    "prefix": "import-larc",
    "body": [
      "import { usePAN } from '@larcjs/core';"
    ],
    "description": "Import LARC core utilities"
  }
}
