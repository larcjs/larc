{
  "name": "@larcjs/core",
  "version": "1.1.1",
  "description": "LARC Core - Lightweight Asynchronous Relay Core: The PAN (Page Area Network) messaging bus implementation",
  "type": "module",
  "main": "./src/index.js",
  "module": "./src/pan.mjs",
  "exports": {
    ".": {
      "import": "./src/pan.mjs",
      "default": "./src/index.js"
    },
    "./pan": {
      "import": "./src/pan.mjs",
      "default": "./src/pan.js"
    },
    "./pan.mjs": {
      "import": "./src/pan.mjs"
    },
    "./components/pan-bus": {
      "import": "./src/components/pan-bus.mjs"
    },
    "./components/pan-bus.mjs": {
      "import": "./src/components/pan-bus.mjs"
    },
    "./components/pan-client": {
      "import": "./src/components/pan-client.mjs"
    },
    "./components/pan-client.mjs": {
      "import": "./src/components/pan-client.mjs"
    },
    "./components/pan-routes": {
      "import": "./src/components/pan-routes.mjs"
    },
    "./components/pan-routes.mjs": {
      "import": "./src/components/pan-routes.mjs"
    }
  },
  "files": [
    "src/**/*",
    "dist/**/*",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "build:minify": "node scripts/build-minified.js",
    "build:all": "npm run build && npm run build:minify",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:coverage": "playwright test --reporter=html && open playwright-report/index.html"
  },
  "keywords": [
    "pan",
    "larc",
    "message-bus",
    "web-components",
    "event-bus",
    "pubsub",
    "messaging",
    "microservices",
    "microfrontends"
  ],
  "author": "Chris Robison",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/larcjs/larc.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/larcjs/larc/issues"
  },
  "homepage": "https://larcjs.com",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "c8": "^10.1.3",
    "esbuild": "^0.25.11",
    "http-server": "^14.1.1"
  }
}
