{
  "name": "@larcjs/core",
  "version": "2.0.0",
  "description": "LARC Core - Lightweight Asynchronous Relay Core: The PAN (Page Area Network) messaging bus implementation",
  "type": "module",
  "main": "./index.js",
  "module": "./pan.mjs",
  "exports": {
    ".": {
      "import": "./pan.mjs",
      "default": "./index.js"
    },
    "./pan": {
      "import": "./pan.mjs",
      "default": "./pan.js"
    },
    "./pan.mjs": "./pan.mjs",
    "./pan.min.mjs": "./pan.min.mjs",
    "./pan-bus": "./pan-bus.mjs",
    "./pan-bus.mjs": "./pan-bus.mjs",
    "./pan-bus.min.mjs": "./pan-bus.min.mjs",
    "./pan-bus-lite": "./pan-bus-lite.mjs",
    "./pan-bus-lite.mjs": "./pan-bus-lite.mjs",
    "./pan-bus-lite.min.mjs": "./pan-bus-lite.min.mjs",
    "./pan-client": "./pan-client.mjs",
    "./pan-client.mjs": "./pan-client.mjs",
    "./pan-client.min.mjs": "./pan-client.min.mjs",
    "./pan-routes": "./pan-routes.mjs",
    "./pan-routes.mjs": "./pan-routes.mjs",
    "./pan-routes.min.mjs": "./pan-routes.min.mjs",
    "./pan-debug": "./pan-debug.mjs",
    "./pan-debug.mjs": "./pan-debug.mjs",
    "./pan-debug.min.mjs": "./pan-debug.min.mjs",
    "./pan-storage": "./pan-storage.mjs",
    "./pan-storage.mjs": "./pan-storage.mjs",
    "./pan-storage.min.mjs": "./pan-storage.min.mjs",
    "./larc-element": "./larc-element.mjs",
    "./larc-element.mjs": "./larc-element.mjs"
  },
  "files": [
    "*.mjs",
    "*.js",
    "*.d.ts",
    "types/**/*",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "build:minify": "node scripts/build-minified.js",
    "build:all": "npm run build && npm run build:minify",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:coverage": "playwright test --reporter=html && open playwright-report/index.html"
  },
  "keywords": [
    "pan",
    "larc",
    "message-bus",
    "web-components",
    "event-bus",
    "pubsub",
    "messaging",
    "microservices",
    "microfrontends"
  ],
  "author": "Chris Robison",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/larcjs/larc.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/larcjs/larc/issues"
  },
  "homepage": "https://larcjs.com",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "c8": "^10.1.3",
    "esbuild": "^0.25.11",
    "http-server": "^14.1.1"
  }
}
